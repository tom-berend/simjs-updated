
{
    "compilerOptions": {
        "module": "Node16",
        "moduleResolution": "Node16",
        "target": "ESNext",
        "lib": [
            "esnext",
            "dom"
        ],
        "declaration": true,
        "outDir": "lib",
        "strict": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": false,
        "noImplicitAny": true
    },
    "include": [
        "src/lib/**/*"
    ]
}